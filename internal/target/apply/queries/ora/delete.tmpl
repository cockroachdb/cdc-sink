{{- /*
DELETE FROM "schema"."table"
WHERE ("pk0","pk1") IN ((:1,:2), (...), ...)
*/ -}}
DELETE FROM {{ .TableName }} WHERE (
{{- range $idx, $col := $.PKDelete }}
    {{- if $idx -}},{{- end -}}
    {{$col.Name}}
{{- end -}}
)IN(
{{- range $groupIdx, $pairs := $.Vars -}}
    {{- if $groupIdx -}},{{- nl -}}{{- end -}}
    ( {{- template "pairExprs" $pairs -}} )
{{- end -}}
)
